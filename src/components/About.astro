---
import * as about from "../assets/markdown/about.md";
import { Image } from "astro:assets";

const thumbnailPath = about.frontmatter.thumbnail;
---

<div class="flex flex-col justify-center items-center">
  <main>
    <section id="hero" class="flex gap-7 justify-center items-center">
      <div>
        <h1 class="text-2xl">
          Hallo there, I&apos;m {about.frontmatter.name}.
        </h1>
        <p>
          A {about.frontmatter.jobTitle}, <br /> based in
          {about.frontmatter.city}
          {about.frontmatter.country}.
        </p>
      </div>
      {
        thumbnailPath && (
          <Image
            src={thumbnailPath}
            alt="Profile thumbnail"
            width="150"
            height="150"
            class={"rounded-full border-2 border-gray-300 shadow-md"}
          />
        )
      }
    </section>
  </main>
</div>
