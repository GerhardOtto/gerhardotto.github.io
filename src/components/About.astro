---
import * as about from "../assets/markdown/about.md";
import { Image } from "astro:assets";
import GitHub from "../assets/icons/github.svg";
import LinkedIn from "../assets/icons/linkedin.svg";
import profileImage from "../assets/me.jpeg";
---

<div class="flex flex-col justify-center items-center">
  <main>
    <section id="hero">
      <div class="flex gap-7 justify-center items-center">
        <div class="pt-11">
          <h1 class="text-2xl py-2">
            Hallo there, I&apos;m {about.frontmatter.name}.
          </h1>
          <p>
            A {about.frontmatter.jobTitle}, <br /> based in
            {about.frontmatter.city}
            {about.frontmatter.country}.
          </p>
          <div class="flex gap-5 justify-center py-5 text-accent">
            <a href={about.frontmatter.GitHub} target="_blank" class="hover:text-primary">
              <GitHub />
            </a>
            <a href={about.frontmatter.LinkedIn} target="_blank" class="hover:text-primary">
              <LinkedIn />
            </a>
          </div>
        </div>
        <Image
          src={profileImage}
          alt="Profile thumbnail"
          width="150"
          height="150"
          class={"rounded-full border-2 border-primary shadow-md"}
        />
      </div>
      <p class="text-pretty py-5">
        {about.rawContent}
      </p>
    </section>
  </main>
</div>
